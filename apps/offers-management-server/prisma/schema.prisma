datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  createdAt   DateTime  @default(now())
  description String?
  fromDate    DateTime?
  id          String    @id @default(cuid())
  name        String?
  offers      Offer[]
  price       Float?
  toDate      DateTime?
  updatedAt   DateTime  @updatedAt
}

model Offer {
  createdAt    DateTime  @default(now())
  customer     Customer? @relation(fields: [customerId], references: [id])
  customerId   String?
  id           String    @id @default(cuid())
  offerDetails String?
  product      Product?  @relation(fields: [productId], references: [id])
  productId    String?
  seller       Seller?   @relation(fields: [sellerId], references: [id])
  sellerId     String?
  updatedAt    DateTime  @updatedAt
}

model Seller {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  offers    Offer[]
  role      String?
  updatedAt DateTime @updatedAt
}

model Customer {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  offers    Offer[]
  role      String?
  updatedAt DateTime @updatedAt
}
